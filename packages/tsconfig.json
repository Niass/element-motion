{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2016", "es2017.object"],
    "jsx": "react",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "pretty": true,
    "rootDir": ".",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "types": ["react", "jest", "node"],
    "resolveJsonModule": true,
    "paths": {
      "@element-motion/*": ["./packages/*/src"]
    }
  },
  "files": [],
  "references": [
    { "path": "core" },
    { "path": "dev" },
    { "path": "docs" },
    { "path": "motions" },
    { "path": "utils" }
  ],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "packages/**/build",
    "packages/**/*test.tsx",
    "packages/**/test/**/*",
    "packages/**/examples/**/*",
    "packages/**/__tests__/**/*",
    "packages/**/stories.tsx"
  ]
}
